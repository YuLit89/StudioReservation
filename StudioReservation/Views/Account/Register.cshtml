@model StudioReservation.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3 style="text-align:center">Create New Account</h3>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row justify-content-center">
            @Html.LabelFor(m => m.FullName, new { @class = "col-md-4 col-form-label" })
            <div></div>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-form-label" })
            <div></div>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            @Html.LabelFor(m => m.ContactNumber, new { @class = "col-md-4 col-form-label" })
            <div></div>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" , placeholder = "+(CountryCode)-Number" })
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 col-form-label" })
            <div></div>
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 col-form-label" })
            <div></div>
            <div class="col-md-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="offset-md-6 col-md-6">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
